<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_account_invoice_refund_sunat" model="ir.ui.view">
            <field name="name">account.invoice.refund.form.sunat</field>
            <field name="model">account.invoice.refund</field>
            <field name="inherit_id" ref="account.view_account_invoice_refund"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="before">
                    <field name="flag" groups="base.group_no_one"/>
                    <field name="company_id" groups="base.group_no_one"/>
                    <field name="journal_id" string="Tipo Comprobante" domain="[('type', '=', flag),('company_id', '=', company_id),('esnotacredito', '=', True)]" options='{"no_quick_create": True, "no_create": True}'/>
                    <field name="type_nc" options='{"no_quick_create": True, "no_create": True}'/>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="date_due" string="Fecha de Vencimiento"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>