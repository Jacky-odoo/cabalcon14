<odoo>
    <data>

<!-- ACCOUNT TYPE -->
        <menuitem id="account_type_menu" name="Tipos de Cuentas"
            action="account.action_account_type_form"
            sequence="30"
            parent="account.account_account_menu"/>
        
        <record id="view_account_type_tree_sunat" model="ir.ui.view">
            <field name="name">account.account.type.tree</field>
            <field name="model">account.account.type</field>
            <field name="inherit_id" ref="account.view_account_type_tree"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="include_initial_balance"/>
                </field>
            </field>
        </record>
        
<!-- ACCOUNT TAG -->
        <menuitem id="account_tag_menu" name="Tags de Cuentas"
            action="account.account_tag_action"
            sequence="31"
            parent="account.account_account_menu"/>
            
<!-- ACCOUNT CHART TEMPLATE -->
        <menuitem id="account_template_menu" name="Plantillas para el Plan Contable"
            sequence="60"
            parent="account.account_account_menu"/>
        
        <menuitem id="account_chart_template_menu" name="Plantillas de Plan de Cuentas"
            action="account.action_account_chart_template_form"
            sequence="1"
            parent="account_template_menu"/>
            
        <menuitem id="account_account_template_menu" name="Plantilla de Cuentas"
            action="account.action_account_template_form"
            sequence="2"
            parent="account_template_menu"/>
        
        <menuitem id="account_tax_template_menu" name="Plantilla de Impuestos"
            action="account.action_account_tax_template_form"
            sequence="3"
            parent="account_template_menu"/>
        
        <menuitem id="account_wizard_multi_chart_menu" name="Elegir el la Plantilla de Cuentas"
            action="account.action_wizard_multi_chart"
            sequence="4"
            parent="account_template_menu"/>

<!-- Account Tag -->
        <record id="account_tag_view_tree_sunat" model="ir.ui.view">
            <field name="name">Tags</field>
            <field name="model">account.account.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="applicability"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <record id="account_tag_view_form_sunat" model="ir.ui.view">
            <field name="name">Tags</field>
            <field name="model">account.account.tag</field>
            <field name="inherit_id" ref="account.account_tag_view_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="applicability"/>
                    <field name="color"/>
                </field>
                
            </field>
        </record>
        
        <record id="account.account_tag_action" model="ir.actions.act_window">
            <field name="name">Account Tags</field>
            <field name="res_model">account.account.tag</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new tag.
              </p>
            </field>
        </record>
        
<!-- Account Tax Group -->
        <record id="view_account_tax_group_tree_sunat" model="ir.ui.view">
            <field name="name">account.tax.group.tree</field>
            <field name="model">account.tax.group</field>
            <field name="inherit_id" ref="account_group_menu.view_account_tax_group_tree"/>
            <field name="arch" type="xml">
                <field name="sequence" position="replace">
                    <field name="sequence" widget="handle"/>
                </field>
                <field name="name" position="after">
                    <field name="tax_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>
        
        <menuitem id="account_group_menu.account_tax_group_menu" name="Grupos de Impuestos"
            action="account_group_menu.action_account_tax_group_tree"
            sequence="51"
            parent="account.account_account_menu"/>
       
<!-- Account Group -->
        <menuitem id="account_group_menu.account_group_menu" name="Grupos de Cuentas"
            action="account.action_account_group_tree"
            sequence="50"
            parent="account.account_account_menu"/>
        
        <record id="view_account_group_tree" model="ir.ui.view">
            <field name="name">account.group.tree</field>
            <field name="model">account.group</field>
            <field name="inherit_id" ref="account.view_account_group_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="parent_id"/>
                </field>
            </field>
        </record>
        
<!-- JOURNAL -->
        <!-- TREE -->
        <record id="view_account_journal_tree_sunat" model="ir.ui.view">
            <field name="name">account.journal.tree.sunat</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_tree"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="code"/>
                </field>
                <field name="type" position="after">
                    <field name="journal_tipolibro"/>
                    <field name="sequence_tipolibro_id" string="Sec. Tipo Libro"/>
                    <field name="journal_tipocomprobante_id"/>
                    <field name="serie" string="Serie"/>
                    <field name="sequence_id" string="Sec. Comprobante"/>
                </field>
            </field>
        </record>
        
        <!-- FORM -->
        <record id="view_account_journal_form_sunat" model="ir.ui.view">
            <field name="name">account.journal.form.sunat</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="esnotacredito" attrs="{'invisible':[('type','!=','sale'), ('type','!=','purchase')]}"/>
                    <field name="esnotadebito" attrs="{'invisible':[('type','!=','sale'), ('type','!=','purchase')]}"/>
                    <field name="esctadetracciones" attrs="{'invisible':[('type','!=','bank')]}"/>
                </field>
                <field name="code" position="after">
                    <separator colspan="2"/>
                    <field name="journal_tipolibro"/>
                    <field name="sequence_tipolibro_id" string="Sec. Tipo Libro"/>
                    <field name="journal_tipocomprobante_id" attrs="{'invisible':['|', ('type','=','cash'), ('type','=','bank')]}"/>
                    <field name="eselectronica" attrs="{'invisible':['|', ('type','=','cash'), ('type','=','bank')]}"/>
                    <separator colspan="2"/>
                    <field name="serie" attrs="{'invisible':[('type','!=','sale')]}"/>
                </field>
                <field name="sequence_id" position="replace">
                    <field name="sequence_id" required="0" attrs="{'readonly': 0}"/>
                </field>
            </field>
        </record>


<!-- TAX -->

        <!-- TREE -->
        <record id="view_tax_tree_SUNAT" model="ir.ui.view">
            <field name="name">account.tax.tree.SUNAT</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_tree"/>
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <field name="tax_sunat"/>
                    <field name="tax_sunat_effect"/>
                    <field name="type_tax_sunat"/>
                </field>
            </field>
        </record>
        
        <!-- FORM -->
        <record id="view_tax_form_SUNAT" model="ir.ui.view">
            <field name="name">account.tax.form.SUNAT</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="tax_sunat"/>
                    <field name="tax_sunat_effect"/>
                </field>
                <field name="type_tax_use" position="after">
                    <field name="type_tax_sunat"/>
                </field>
            </field>
        </record>
        
        
<!-- MOVE - Lo actualizo porque de estos registros se extraerá la información para los Registros de Vtas / Compras y Caja Bancos entre otros -->
        <!-- FORM -->
        <record id="view_move_form_sunat" model="ir.ui.view">
            <field name="name">account.move.form.sunat</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <field name="ref" position="replace"/>
                <field name="journal_id" position="replace"/>
                
                <field name="date" position="replace">
                    <field name="journal_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="account_tipolibro" string="Libro/Registro"/>
                    <field name="sec_journal_libro" readonly="1"/>
                    <field name="tipo_operacion" string="Tipo de Operación" options="{'no_open': True, 'no_create': True}"/>
                    <field name="tipocomprobante_id" string="Tipo Comprob." options="{'no_open': True, 'no_create': True}"/>
                    <field name="estadocomprobante" string="Estado Comprob."/>
                </field>
                
                <field name="company_id" position="before">
                    <field name="ref" attrs="{'required': [('id', '==', False)]}"/>
                    <field name="date"/>
                </field>
                
                <field name="amount" position="replace">
                    <field name="amount" invisible="0"/>
                </field>
                <field name="currency_id" position="replace">
                    <field name="currency_id" invisible="0"/>
                    <field name="matched_percentage" widget="percentage"/>
                </field>
                
                <notebook position="inside">
                    <page name="info_sunat" string="Información SUNAT">
                        <group string="Información para Registros Contables">
                            <group string="Comprobante">
                                <field name="invoice_ids" widget="many2many_tags"/>
                                <field name="feccomprobante"/>
                                <field name="fecvencimiento"/>
                                <field name="serie"/>
                                <field name="correlativo"/>
                            </group>
                            <group string="Cliente / Proveedor">
                                <field name="partner_id"/>
                                <field name="doc_tipo"/>
                                <field name="doc_numero"/>
                            </group>
                            <group colspan="4">
                                <group string="Bases Imponibles">
                                    <field name="tipocambio"/>
                                    <field name="baseimponible"/>
                                    <field name="baseisc"/>
                                    <field name="baseexonerada"/>
                                    <field name="baseinafecta"/>
                                </group>
                                <group string="Detracción">
                                    <field name="detraccion" />
                                    <field name="det_code" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="detraccion_id" widget="selection" string="%% Detracción" domain="[('type_tax_sunat', '=', 50)]"/>
                                    <field name="det_fecpago" string="Fecha de Pago Detracción"/>
                                    <field name="det_nropago" string="Documento de Pago" />
                                </group>
                                <group string="Impuestos">
                                    <field name="igv"/>
                                    <field name="isc"/>
                                    <field name="imp" attrs="{'invisible':[('account_tipolibro','!=','04')]}"/>
                                    <field name="otrostrib"/>
                                </group>
                                <group string="Totales Factura">
                                    <field name="importesubtotal"/>
                                    <field name="totaltrib"/>
                                    <field name="importetotal"/>
                                </group>
                            </group>
                        </group>
<!--                        <group string="Información para Libro de Caja y Bancos"
                            attrs="{'invisible':[('account_tipolibro','!=','01')]}">
                            <group>
                                <field name="bank_ids"/>
                            </group>
                    </group> -->
                    </page>
                </notebook>
            </field>
        </record>

<!-- Account Move Line -->
        <record id="view_move_line_tree_sunat" model="ir.ui.view">
            <field name="name">account.move.line.tree_sunat</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="amount_currency" position="after">
                    <field name="amount_residual" readonly="True"/>
                    <field name="amount_residual_currency" readonly="True" groups="base.group_multi_currency"/>
                </field>
            </field>
        </record>
        
        <record id="view_move_line_form_sunat" model="ir.ui.view">
            <field name="name">account.move.line.form.sunat</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="quantity" position="after">
                    <field name="amount_residual"/>
                    <field name="amount_residual_currency"/>
                </field>
            </field>
        </record>


    </data>
</odoo>































